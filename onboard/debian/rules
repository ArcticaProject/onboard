#!/usr/bin/make -f

DEB_AUTO_CLEANUP_RCS            := yes
DEB_PYTHON_SYSTEM               := pycentral

include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/dpatch/dpatch.make

#clean: 
#	clean-patched unpatch

clean:: unpatch
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	-$(MAKE) distclean
	dh_clean

clean-patched:
	$(testdir)
	$(testroot)
	rm -rf debian/onboard debian/files debian/substvars


unpatch:
	dpatch deapply-all
	rm -rf patch-stamp debian/patched

build: patch-stamp patch

binary-install/onboard:: 
	mkdir -p debian/onboard/usr/bin
	cp debian/onboard.sh debian/onboard/usr/bin/onboard
	cp debian/onboard-settings.sh debian/onboard/usr/bin/onboard-settings
	
	dh_desktop
	dh_installmime
	dh_pycentral
	dh_python

